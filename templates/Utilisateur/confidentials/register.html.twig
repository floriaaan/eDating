{% extends 'Utilisateur/confidentials/form.html.twig' %}

{% block title %}{{ parent() }} - S'inscrire {% endblock %}


{% block body %}
    <div class="container-login100 ">
        <div class="wrap-login100 p-3">
            <form class="login100-form validate-form mt-5" method="post"
                  action="{{ server.document_root }}/Utilisateur/Register" enctype="multipart/form-data">
                    <span class="login100-form-avatar">
						<img src="{{ server.document_root }}/doc/fmm.svg" alt="Find My Mate">
					</span>
                <span class="login100-form-title pb-2">
						Find My Mate
					</span>
                <div class="display-4 pb-1 text-center">
                    Création d'un compte
                </div>


                <div class="mt-5 d-flex justify-content-between">

                    <div class="col-sm-6 wrap-input100 validate-input">
                        <input type="text" class="input100" name="registerPrenom" id="registerPrenom">
                        <span class="focus-input100" data-placeholder="Prénom"></span>
                    </div>
                    <div class="col-sm-6 wrap-input100 validate-input">
                        <input type="text" class="input100" name="registerNom" id="registerNom">
                        <span class="focus-input100" data-placeholder="Nom de famille"></span>
                    </div>


                </div>


                <div class="wrap-input100 validate-input mt-4">
                    <input type="email" class="input100" id="registerEmail" name="registerEmail" required>
                    <span class="focus-input100" data-placeholder="Adresse e-mail"></span>
                </div>
                <div class="wrap-input100 validate-input mt-4">
                    <input type="password" class="input100" id="registerMotDePasse" name="registerMotDePasse" required>
                    <span class="focus-input100" data-placeholder="Mot de passe"></span>


                </div>


                <hr>


                <div class=" mt-5 d-flex justify-content-between">
                    <div class="col-sm-8 wrap-input100 validate-input">
                        <input type="text" class="input100" id="registerAffinites" name="registerAffinites">
                        <span class="focus-input100" data-placeholder="Vos affinités"
                              aria-describedby="helpAffinites"></span>
                        <small id="helpAffinites" class=" text-muted">Ce que vous aimez (séparé par une virgule)</small>
                    </div>


                    <div class="col-sm-4 text-muted">
                        <label for="registerSexe">Sexe</label>
                        <select id="registerSexe" name="registerSexe" class="form-control">
                            <option>Homme</option>
                            <option>Femme</option>
                            <option>Autre</option>
                        </select>
                    </div>
                </div>

                <div class=" mt-4 d-flex justify-content-between">
                    <div class="col-sm-4 text-muted">
                        <label for="registerSituation">Situation</label>
                        <select id="registerSituation" name="registerSituation" class="form-control">
                            <option>Célibataire</option>
                            <option>En couple</option>
                            <option>Marié</option>
                            <option>Autre</option>
                        </select>
                    </div>

                    <div class="col-sm-4 text-muted">
                        <label for="registerAge">Age</label>
                        <input type="number" id="registerAge" name="registerAge" min="18" max="100" value="18"
                               class="form-control" aria-describedby="warnAge">
                        <small id="warnAge" class="form-text text-muted">Personnes majeures uniquement.
                            &#128286;</small>
                    </div>


                    <div class="col-sm-4 text-muted">
                        <label for="registerAttirance">Attirance</label>
                        <select id="registerAttirance" name="registerAttirance" class="form-control">
                            <option>Hétérosexuel</option>
                            <option>Homosexuel</option>
                            <option>Bisexuel</option>
                            <option>Autre</option>
                        </select>
                    </div>
                </div>

                <div class=" wrap-input100 validate-input mt-4">
                    <input class="input100" type="text" id="registerTitre" name="registerTitre">
                    <span class="focus-input100" data-placeholder="Une brève description de vous"></span>


                </div>

                <div class=" wrap-input100 validate-input mt-5">
                    <textarea class="input100 textarea100" id="registerDescription" name="registerDescription"
                              rows="5"></textarea>
                    <span class="focus-input100" data-placeholder="Dites nous en plus"></span>
                </div>

                <div class="custom-file mt-4">
                    <input type="file" class="custom-file-input" id="registerImg" name="registerImg">
                    <label class="custom-file-label" for="registerImg" id="registerImgName">Choisissez une photo de
                        profil</label>
                </div>


                <hr>


                <div class=" mt-4 d-flex justify-content-between">
                    <div class="col-sm-8 wrap-input100 validate-input">
                        <input type="text" class="input100" id="registerVille" name="registerVille" required>
                        <span class="focus-input100" data-placeholder="Ville"></span>
                    </div>

                    <div class="col-sm-4 ">
                        <label for="registerCampus">Campus</label>
                        <select id="registerCampus" name="registerCampus" class="form-control" required>
                            <option>Madrillet</option>
                            <option>Mont-Saint-Aignan</option>
                            <option>Saint-Marc</option>
                            <option>Pasteur</option>
                            <option>UFR Santé</option>
                            <option>Autre</option>
                        </select>
                    </div>
                </div>
                <div class="mt-4 mb-3 d-flex justify-content-between">
                    <div class="col-sm-7 wrap-input100 validate-input">
                        <input type="text" class="input100" id="registerTelephone" name="registerTelephone">
                        <span class="focus-input100" data-placeholder="Téléphone"></span>
                    </div>
                    <div class="col-sm-4">
                        <input type="button" class="btn btn-outline-fmm" value="Localisation auto."
                               id="locationAutoBtn"/>
                    </div>

                    <span id="locationTicked"></span>
                </div>


                <div class="container-login100-form-btn mt-5 mb-5">
                    <input type="submit" class="login100-form-btn disabled" id="registerSubmit" value="S'inscrire">
                </div>

                <ul class="login-more">
                    <li class="mb-2">
                        <a href="/Utilisateur/ForgotPass" class="txt2">
                            Identifiants
                        </a>
                        <span class="txt1">
								oubliés ?
							</span>


                    </li>

                    <li class="mb-5">
							<span class="txt1">
								J'ai déjà un compte,
							</span>

                        <a href="/Utilisateur/Login" class="txt2">
                            je me connecte!
                        </a>
                    </li>
                </ul>

                <input type="hidden" name="registerLat" id="registerLat" value="0"/>
                <input type="hidden" name="registerLong" id="registerLong" value="0"/>
                <input type="hidden" name="tokenCRSF" value="{{ token }}">
            </form>
        </div>
    </div>


    <div id="dropDownSelect1"></div>
{% endblock %}

{% block js %}
    <script src="/js/register.js"></script>
{% endblock %}