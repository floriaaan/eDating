{% extends 'Utilisateur/confidentials/form.html.twig' %}

{% block title %}{{ parent() }} - Se connecter {% endblock %}



{% block body %}
        <div class="container-login100 ">
            <div class="wrap-login100 p-3">
                <form class="login100-form validate-form mt-5" method="post" action="/Utilisateur/Login">
                    <span class="login100-form-avatar">
						<img src="/doc/fmm.svg" alt="Find My Mate">
					</span>
					<span class="login100-form-title pb-2">
						Find My Mate
					</span>
                    <div class="display-4 pb-1 text-center">
						Connexion
					</div>


                    <div class="wrap-input100 validate-input mt-5" data-validate = "Email obligatoire">
                        <input class="input100" type="mail" name="loginEmail" required>
                        <span class="focus-input100" data-placeholder="Adresse e-mail"></span>
                    </div>

                    <div class="wrap-input100 validate-input mt-4 mb-5" data-validate="Mot de passe obligatoire">
                        <input class="input100" type="password" name="loginPassword" required>
                        <span class="focus-input100" data-placeholder="Mot de passe"></span>
                    </div>

                    <div class="container-login100-form-btn mb-5">
                        <button class="login100-form-btn">
                            Se connecter
                        </button>
                    </div>

                    <ul class="login-more">
                        <li class="mb-2">
                            <a href="/Utilisateur/ForgotPass" class="txt2">
                                Identifiants
                            </a>
							<span class="txt1">
								oubli√©s ?
							</span>


                        </li>

                        <li>
							<span class="txt1">
								Je n'ai pas de compte,
							</span>

                            <a href="/Utilisateur/Register" class="txt2">
                                je m'inscris !
                            </a>
                        </li>
                    </ul>
                    <input type="hidden" name="tokenCRSF" value="{{ token }}">
                </form>
            </div>
        </div>


    <div id="dropDownSelect1"></div>
{% endblock %}