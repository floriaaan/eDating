{% extends "index.html.twig" %}
{% block title %}{{ parent() }} - Liste des membres{% endblock %}

{% block body %}

    <div class="jumbotron">
        <h1 class="display-4">Liste des membres</h1>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Permissions</th>
                <th scope="col">Email</th>
                <th scope="col">Campus</th>
                <th scope="col">Likes</th>
                <th scope="col">Signalements</th>

            </tr>
            </thead>
            <tbody>
            {% for user in listUser %}
                <tr>
                    <th scope="row">#{{ user.UID }}</th>
                    <td>{{ user.Prenom }} {{ user.Nom }}</td>
                    <td>{% for perm in user.Permission %} {% if perm.Active == 1 %} {{ perm.Type }} {% endif %}{% endfor %}</td>
                    <td>{{ user.Email }}</td>
                    <td>{{ user.Campus }}</td>
                    <td>{{ user.Likes|length }}</td>
                    <td><a href="/Admin/Report/{{ user.UID }}"> {{ user.Reports|length }}</a></td>


                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>


{% endblock %}