{% extends "index.html.twig" %}
{% block title %}{{ parent() }} - Recherche{% endblock %}

{% block body %}
    <div class="display-4 wall-white ml-5">Ils aiment : {{ search }}</div>
    <hr class="ml-4 wall-white">
    <div class="container-fluid p-3 mx-2 wall-white">

        <div class="card-columns">
            {% for user in listUser %}

                <div class="card mx-1">
                    <img class="img-fluid" src="/uploads/images/{{ user.ProfilImgRepo }}/{{ user.ProfilImgName }}"
                         alt="{{ user.Prenom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.Prenom }} {{ user.Nom }} - {{ user.Age }} ans</h5>
                        <p class="card-text">{{ user.Titre }}</p>
                        <p class="card-text"><small class="text-muted">Inscrit au Campus de {{ user.Campus }}
                                <br> {{ user.Situation }} - est {{ user.Attirance }}</small></p>

                        <hr>
                        <div class="d-flex justify-content-start">

                            {% if user.UID != userr.UID %}
                                <a href="/Mate/Profile/{{ user.UID }}" class="card-link btn btn-outline-fmm mt-2">Voir son
                                    profil</a>
                                <a href="/Mate/Like/{{ user.UID }}" class="card-link btn mt-2
                                    {% if user.UID in likes %} btn-danger">
                                        <i class="fas fa-heart"></i> est Lik√©</a>
                                    {% else %} btn-outline-danger">
                                        <i class="fas fa-heart"></i> Liker</a>
                                    {% endif %}
                                <a href="/Messages/{{ user.UID }}" class="card-link btn btn-outline-primary mt-2">
                                    <i class="fas fa-comment-dots"></i> Messages</a>
                            {% else %}
                                <a href="/Utilisateur/Profile" class="card-link btn btn-outline-fmm mt-2">Voir mon
                                    profil</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer">
                        <p class="card-text"><small class="text-muted">Inscrit
                                le {{ user.DateInscription | date("d.m.y") }}</small></p>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>


{% endblock %}